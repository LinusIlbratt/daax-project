{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["SUPABASE_URL", "SUPABASE_SERVICE_ROLE_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": { "cache": false, "persistent": true },
    "lint": { "dependsOn": ["^build"] },
    "clean": { "cache": false }
  }
}
